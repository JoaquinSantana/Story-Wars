          <ul>
          <% @story.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
    <% end %>
  
    <div class="field">
        <%= f.text_field :title, placeholder: "Title of the story" %>
