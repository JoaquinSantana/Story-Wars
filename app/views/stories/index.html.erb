<div class="pageContainer">
    <% if !signed_in? %>
        <div class="heroImg">
            <div class="container">
                <h1><span>Write your story</span>Create and choose the path of a story</h1>
                <div class="textCenter"><%= link_to "Join now", join_path, class: "btn btn-inverse marginBottom" %></div>
            </div>
        </div>
    <% end %>
    <div class="container">
        <ul class="primaryList">
            <% @stories.each_with_index do |story, index| %>
                <% if index > 7 %>
                    <% break %>
                <% end %>
                <% votes = 0 %>
                <% story.chapters.each do |chapter| %>
                    <% votes = votes + chapter.votes.count %>
                <% end %>
                <li>
                    <%= link_to(story, class: "primaryHeadline") do %>
                        <span><%= story.title %></span>
                        <div class="extraInfo">
                            <span><%= votes * 10 %> p</span>
                        </div>
                    <% end %>
                </li>
            <% end %>
        </ul>
        <%= link_to "Newest stories", { :controller => "stories", :action => "newest" }, :class => "pull-right marginTop marginBottom marginLeft btn" %>
        <%= link_to "All stories", { :controller => "stories", :action => "all" }, :class => "pull-right marginTop marginBottom btn" %>
    </div>
</div>