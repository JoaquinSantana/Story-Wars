<div class="pageContainer">
    <div class="container">
        <% if current_user == @user %>  
            <h1>Edit your profile</h1>
            <div class="userProfile">
                <%= gravatar_for @user %>
                <a href="http://gravatar.com/emails" class="btn btn-inverse userImageBtn">Update your avatar</a>
            </div>

            <%= render 'form' %>
        <% end %>
    </div>
</div>
