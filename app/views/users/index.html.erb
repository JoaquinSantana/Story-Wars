<div class="pageContainer">
    <div class="container">    
        <ul class="simpleList">
            <% @users.each do |user| %>
                <li>
                    <%= link_to(user) do %>
                        <span><%= user.name %></span>
                        <% if current_user != user && signed_in? %>
                            <% if current_user.friendships.find_by_friend_id(user) %>
                                - <%= link_to "remove", friendship_path(current_user.friendships.find_by_friend_id(user)), :method => :delete %>
                            <% else %>
                                - <%= link_to "Add friend", friendships_path(:friend_id => user), :method => :post %>
                            <% end %>
                        <% end %>
                    <% end %>
                </li>
            <% end %>
        </ul>
    </div>
</div>
